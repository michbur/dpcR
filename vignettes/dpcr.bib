  ISSN                     = {0724-6145},
  Keywords                 = {Antibodies, Biological Assay, Computer Systems, Microscopy, Fluorescence, Microspheres, Nucleic Acid Hybridization, Pathology, Molecular, Polymerase chain reaction},
