@Article{mcdermott_multiplexed_2013,
  Title                    = {Multiplexed target detection using {DNA}-binding dye chemistry in droplet digital {PCR}},
  Author                   = {McDermott, Geoffrey P and Do, Duc and Litterst, Claudia M and Maar, Dianna and Hindson, Christopher M and Steenblock, Erin R and Legler, Tina C and Jouvenot, Yann and Marrs, Samuel H and Bemis, Adam and Shah, Pallavi and Wong, Josephine and Wang, Shenglong and Sally, David and Javier, Leanne and Dinio, Theresa and Han, Chunxiao and Brackbill, Timothy P and Hodges, Shawn P and Ling, Yunfeng and Klitgord, Niels and Carman, George J and Berman, Jennifer R and Koehler, Ryan T and Hiddessen, Amy L and Walse, Pramod and Bousse, Luc and Tzonev, Svilen and Hefner, Eli and Hindson, Benjamin J and Cauly, 3rd, Thomas H and Hamby, Keith and Patel, Viresh P and Regan, John F and Wyatt, Paul W and Karlin-Neumann, George A and Stumbo, David P and Lowe, Adam J},
