@Article{bhat_single_2009,
  Title                    = {Single molecule detection in nanofluidic digital array enables accurate measurement of {DNA} copy number},
  Author                   = {Bhat, Somanath and Herrmann, Jan and Armishaw, Paul and Corbisier, Philippe and Emslie, Kerry R},
